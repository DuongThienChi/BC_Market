<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BC_Market.Views.ShopperOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BC_Market.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals" 
    xmlns:local1="using:BC_Market.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <!-- Hàng cho header -->
            <RowDefinition Height="Auto" />
            <!--Icon, Add Product-->
            <RowDefinition Height="60"/>
            <!-- Header Table -->
            <RowDefinition Height="4*"/>
            <!--List Products-->
            <RowDefinition Height="Auto"/>
            <!--Select All, Delete, Total Price-->
            <RowDefinition Height="Auto"/>
            <!--Address - Order button-->
        </Grid.RowDefinitions>

        <!-- Header nằm trên cùng -->
        <Grid Grid.Row="0" Background="#292C2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="BC Market"
               FontSize="18"
               FontWeight="Bold"
               Foreground="#FAC1D9"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Padding="10 0 0 0"
               Grid.Column="0"/>

            <Image Source="/Assets/Icons/notify.png" 
               Width="25" Height="25"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Margin="0 5 20 0"
               Grid.Column="1"/>

            <Border Background="White" Width="1" Height="30" Grid.Column="2"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 20 0"/>
            <Border CornerRadius="15" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="3" Background="Transparent"
                    Margin="0 0 20 0"
                    >
                <Image Source="/Assets/Images/MyAvatar.jpg" 
               Width="30" Height="30" 
               Stretch="UniformToFill" />
            </Border>
        </Grid>
        <!--Icon, Add Product -->
        <Grid Grid.Row="1" Margin="80 20 80 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Assets/Icons/cart 1.png" Width="30" Height="30" Margin="0,0,5,0"/>
                <TextBlock Text="Shopping Cart" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1">
                <Button Content="Add Product" Click="AddProduct_Clicked"  CornerRadius="5"  Height="40"  Background="#E0E0E0" HorizontalAlignment="Right"/>
            </StackPanel>
           
        </Grid>


        <!--Header Table-->
        <Grid Grid.Row="2" Margin="80 10 80 10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <CheckBox Content="" Grid.Column="0" Padding="5 0 0 0"/>
            <TextBlock Text="Product" FontSize="16" FontWeight="Bold" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="Product Name" FontSize="16" FontWeight="Bold" Grid.Column="2" Padding="10 0 0 0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="Quantity" FontSize="16" FontWeight="Bold" Grid.Column="3" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="Price" FontSize="16" FontWeight="Bold" Grid.Column="4" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock Text="Total" FontSize="16" FontWeight="Bold" Grid.Column="5" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <!--ItemRepeater Binding de hien thi danh sach san pham -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="3" Margin="80 5 80 10" >
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.CartItems, Mode=OneWay}"  >
                <ItemsRepeater.Layout>
                    <StackLayout  Orientation="Vertical" Spacing="0">
                    </StackLayout>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="local1:CartProduct">
                        <Grid Background= "#E0E0E0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" MaxHeight="100" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.5*" />
                            </Grid.ColumnDefinitions>
                            <CheckBox Content="" Grid.Column="0"
                                 Padding="5 0 0 0"  />
                            <Image Source="{x:Bind Product.ImagePath}" Grid.Column="1"/>
                            <StackPanel  Padding="10 0 0 0"  Grid.Column="2" >
                                <TextBlock Text="{x:Bind Product.Name}" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="{x:Bind Product.Description}" FontSize="14"/>
                            </StackPanel>
                            <TextBlock Text="{x:Bind Quantity}" FontSize="16" FontWeight="Bold"  Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                            <StackPanel Orientation="Horizontal"  Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center">
                                    <Run Text="$"/>
                                    <Run Text="{x:Bind Product.Price, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock FontSize="18" FontWeight="Bold"  VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center">
                                    <Run Text="$"/>
                                    <Run Text="{x:Bind TotalPrice, Mode=OneWay}"/>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>

            </ItemsRepeater>
        </ScrollViewer>
        <Grid Grid.Row="4" Margin="80 5 80 10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <Button Content="Delete All" Height="30" Foreground="White" Background="#FF2F33" CornerRadius="5" Grid.Column="0" Grid.ColumnSpan="2"/>
            <TextBlock  FontSize="18" FontWeight="Bold" Margin="20 0 0 0" Grid.Column="5" VerticalAlignment="Center">
                <Run Text="Total:"/>
            </TextBlock>
        </Grid>
        <Grid Grid.Row="5" Margin="80 20 80 10" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="0" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5" >
                    <Image Source="/Assets/Icons/location.png"  Margin="0,0,5,0"/>
                    <TextBlock Text="Address" FontSize="16" FontWeight="Bold" />
                </StackPanel>
                <TextBox Text="Enter your address" FontWeight="Bold" HorizontalAlignment="Left" Width="300"  BorderBrush="Black" BorderThickness="3" CornerRadius="5"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <ComboBox PlaceholderText="Payment Method" Background="#E0E0E0" Width="200" Height="40" CornerRadius="5" VerticalAlignment="Center">
                    <ComboBoxItem Content="Cash" />
                    <ComboBoxItem Content="Credit Card" />
                    <ComboBoxItem Content="Banking" />
                </ComboBox>
                <Button Content="Order" Foreground="White" Width="60" Height="40" Background="#FF2F33" CornerRadius="5" Margin="20 0 0 0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
